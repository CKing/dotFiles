#!/bin/sh

set -eu

yadm=$(dirname "$0")
cd "$yadm"

. "$yadm"/functions.sh

install_package yadm neovim eza pet fish nerdfetch keychain

yadm submodule update --init --recursive
yadm decrypt
yadm remote set-url origin git@github.com:cking/dotfiles.git

echo "Changing shell to fish..."
chsh -s "$( which fish )"
